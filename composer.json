{
    "name": "zfcampus/zf-rest",
    "description": "ZF2 Module providing structure for RESTful resources",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "zend",
        "module",
        "rest"
    ],
    "homepage": "http://apigility.org/",
    "support": {
        "email": "apigility-users@zend.com",
        "irc": "irc://irc.freenode.net/apigility",
        "source": "https://github.com/zfcampus/zf-rest",
        "issues": "https://github.com/zfcampus/zf-rest/issues"
    },
    "repositories": [
        { "type": "composer", "url": "https://packages.zendframework.com" }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.3",
        "zfcampus/zf-api-problem": "dev-master",
        "zfcampus/zf-hal": "dev-master",
        "zendframework/zend-eventmanager": "dev-develop",
        "zendframework/zend-json": "dev-develop",
        "zendframework/zend-loader": "dev-develop",
        "zendframework/zend-mvc": "dev-develop",
        "zendframework/zend-paginator": "dev-develop"
    },
    "require-dev": {
        "phpunit/PHPUnit": "3.7.*",
        "zendframework/zend-console": "dev-develop",
        "zendframework/zend-http": "dev-develop",
        "zendframework/zend-servicemanager": "dev-develop",
        "zendframework/zend-uri": "dev-develop",
        "zendframework/zend-view": "dev-develop"
    },
    "autoload": {
        "psr-0": {
            "ZF\\Rest\\": "src/",
            "ZFTest\\": "test/"
        }
    }
}
